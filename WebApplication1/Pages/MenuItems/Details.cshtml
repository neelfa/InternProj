@page "/MenuItems/Details/{id:int}"
@model WebApplication1.Pages.MenuItems.DetailsModel
@{
    ViewData["Title"] = "Menu Item Details - " + Model.MenuItem.Name;
}

<div class="min-h-screen" style="background: linear-gradient(135deg, #faf7f2 0%, #f5e6d3 100%);">
    <div class="container py-5">
        <!-- Navigation -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Menu</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.MenuItem.Name</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow border-0 rounded-4 overflow-hidden">
                    @if (!string.IsNullOrEmpty(Model.MenuItem.ImagePath))
                    {
                        <div class="ratio ratio-21x9">
                            <img src="@Model.MenuItem.ImagePath" class="card-img-top object-fit-cover" alt="@Model.MenuItem.Name">
                        </div>
                    }
                    
                    <div class="card-header bg-white border-0 p-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h1 class="h2 fw-bold text-dark mb-3">@Model.MenuItem.Name</h1>
                                <span class="badge bg-@GetCategoryColor(Model.MenuItem.Category) rounded-pill fs-6 px-3 py-2">
                                    @Model.MenuItem.Category
                                </span>
                            </div>
                            <div class="text-end">
                                <p class="text-muted small mb-1">Price</p>
                                <h2 class="text-warning fw-bold mb-0 peso-sign">?@Model.MenuItem.Price.ToString("F2")</h2>
                            </div>
                        </div>
                    </div>

                    <div class="card-body p-4">
                        <h5 class="text-muted mb-2">Description</h5>
                        <p class="fs-5 text-dark leading-relaxed mb-4">@Model.MenuItem.Description</p>

                        <div class="d-flex gap-3 pt-3 border-top">
                            <a href="/MenuItems/Edit/@Model.MenuItem.Id" class="btn btn-warning flex-fill">
                                <i class="bi bi-pencil"></i> Edit Item
                            </a>
                            <a href="/MenuItems/Delete/@Model.MenuItem.Id" class="btn btn-outline-danger flex-fill">
                                <i class="bi bi-trash"></i> Delete Item
                            </a>
                            <a href="/" class="btn btn-outline-secondary flex-fill">
                                <i class="bi bi-arrow-left"></i> Back to Menu
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetCategoryColor(WebApplication1.Models.MenuCategory category)
    {
        return category switch
        {
            WebApplication1.Models.MenuCategory.Appetizers => "success",
            WebApplication1.Models.MenuCategory.Meals => "warning",
            WebApplication1.Models.MenuCategory.Desserts => "danger",
            WebApplication1.Models.MenuCategory.Drinks => "info",
            _ => "secondary"
        };
    }
}