@page "/MenuItems/Edit/{id:int}"
@model WebApplication1.Pages.MenuItems.EditModel
@{
    ViewData["Title"] = "Edit Menu Item - " + Model.MenuItem.Name;
}

<div class="min-h-screen" style="background: linear-gradient(135deg, #faf7f2 0%, #f5e6d3 100%);">
    <!-- Header -->
    <header class="border-bottom bg-white bg-opacity-50 sticky-top shadow-sm">
        <div class="container py-3">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="d-flex align-items-center gap-3">
                        <div class="rounded-2 bg-warning bg-opacity-20 p-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                            <span class="text-warning fw-bold fs-5">???</span>
                        </div>
                        <div>
                            <h1 class="h4 fw-bold mb-0 text-dark">Food Menu</h1>
                            <p class="text-muted small mb-0">Manage your restaurant menu</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 text-end">
                    <a href="/" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Menu
                    </a>
                </div>
            </div>
        </div>
    </header>

    <div class="container py-5">
        <!-- Navigation -->
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/" class="text-decoration-none">Menu</a></li>
                <li class="breadcrumb-item"><a href="/MenuItems/Details/@Model.MenuItem.Id" class="text-decoration-none">@Model.MenuItem.Name</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow border-0 rounded-4">
                    <div class="card-header bg-warning bg-opacity-10 border-0 p-4">
                        <div class="d-flex align-items-center gap-3">
                            <div class="rounded-3 bg-warning bg-opacity-25 p-2 d-flex align-items-center justify-content-center">
                                <i class="bi bi-pencil text-warning fs-4"></i>
                            </div>
                            <h2 class="h4 fw-bold text-dark mb-0">Edit Menu Item</h2>
                        </div>
                    </div>

                    <div class="card-body p-4">
                        <form method="post" enctype="multipart/form-data">
                            <input asp-for="MenuItem.Id" type="hidden" />
                            <input asp-for="MenuItem.ImagePath" type="hidden" />
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="mb-4">
                                <label asp-for="MenuItem.Name" class="form-label fw-semibold">Item Name *</label>
                                <input asp-for="MenuItem.Name" class="form-control py-3 rounded-3" 
                                       placeholder="e.g., Caesar Salad" />
                                <span asp-validation-for="MenuItem.Name" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="MenuItem.Price" class="form-label fw-semibold">Price (?) *</label>
                                <input asp-for="MenuItem.Price" type="number" step="0.01" min="0" 
                                       class="form-control py-3 rounded-3" placeholder="0.00" />
                                <span asp-validation-for="MenuItem.Price" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="MenuItem.Category" class="form-label fw-semibold">Category *</label>
                                <select asp-for="MenuItem.Category" asp-items="Html.GetEnumSelectList<WebApplication1.Models.MenuCategory>()" 
                                        class="form-select py-3 rounded-3">
                                    <option value="">Choose a category</option>
                                </select>
                                <span asp-validation-for="MenuItem.Category" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="MenuItem.Description" class="form-label fw-semibold">Description *</label>
                                <textarea asp-for="MenuItem.Description" class="form-control rounded-3" rows="4" 
                                          placeholder="Describe the item..."></textarea>
                                <span asp-validation-for="MenuItem.Description" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-semibold">Food Image</label>
                                <p class="text-muted small mb-3">Upload a clear photo of this menu item (JPG or PNG)</p>

                                @if (!string.IsNullOrEmpty(Model.MenuItem.ImagePath))
                                {
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold text-muted small">Current Image</label>
                                        <div class="border rounded-3 p-2 bg-light">
                                            <img src="@Model.MenuItem.ImagePath" class="img-fluid rounded-3" style="max-height: 150px;" alt="Current image">
                                        </div>
                                    </div>
                                }

                                <div id="imageUploadArea" class="border border-2 border-dashed border-secondary rounded-3 p-4 text-center position-relative"
                                     style="min-height: 200px; cursor: pointer; transition: all 0.3s ease;">
                                    
                                    <input type="file" asp-for="MenuItem.ImageFile" accept="image/jpeg,image/jpg,image/png" 
                                           class="position-absolute w-100 h-100 opacity-0" style="cursor: pointer;" id="imageInput" />
                                    
                                    <div id="uploadPlaceholder" class="d-flex flex-column align-items-center justify-content-center h-100">
                                        <i class="bi bi-cloud-upload text-warning fs-1 mb-3"></i>
                                        <h5 class="fw-semibold text-dark mb-2">Click to browse or drag and drop</h5>
                                        <p class="text-muted small mb-1">JPG or PNG files only</p>
                                        <p class="text-muted small mb-0">@(string.IsNullOrEmpty(Model.MenuItem.ImagePath) ? "No image selected" : "Replace current image")</p>
                                    </div>

                                    <div id="imagePreview" class="d-none">
                                        <img id="previewImage" class="img-fluid rounded-3 mb-3" style="max-height: 200px;" />
                                        <div class="d-flex gap-2 justify-content-center">
                                            <button type="button" class="btn btn-outline-warning btn-sm" onclick="replaceImage()">
                                                <i class="bi bi-arrow-repeat"></i> Replace
                                            </button>
                                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeImage()">
                                                <i class="bi bi-trash"></i> Remove
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <span asp-validation-for="MenuItem.ImageFile" class="text-danger small"></span>
                            </div>

                            <div class="d-flex gap-3 pt-3 border-top">
                                <a href="/MenuItems/Details/@Model.MenuItem.Id" class="btn btn-outline-secondary flex-fill py-3 rounded-3">Cancel</a>
                                <button type="submit" class="btn btn-warning flex-fill py-3 rounded-3 fw-semibold">
                                    <i class="bi bi-check-circle"></i> Update Item
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        const imageInput = document.getElementById('imageInput');
        const imageUploadArea = document.getElementById('imageUploadArea');
        const uploadPlaceholder = document.getElementById('uploadPlaceholder');
        const imagePreview = document.getElementById('imagePreview');
        const previewImage = document.getElementById('previewImage');

        // Handle file input change
        imageInput.addEventListener('change', function(e) {
            handleFiles(e.target.files);
        });

        // Handle drag and drop
        imageUploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            imageUploadArea.style.borderColor = '#d4723d';
            imageUploadArea.style.backgroundColor = '#f5e6d3';
        });

        imageUploadArea.addEventListener('dragleave', function(e) {
            e.preventDefault();
            imageUploadArea.style.borderColor = '';
            imageUploadArea.style.backgroundColor = '';
        });

        imageUploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            imageUploadArea.style.borderColor = '';
            imageUploadArea.style.backgroundColor = '';
            
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                // Update the input element
                imageInput.files = files;
                handleFiles(files);
            }
        });

        function handleFiles(files) {
            if (files.length === 0) return;

            const file = files[0];
            
            // Validate file type
            if (!file.type.match(/image\/(jpeg|jpg|png)/)) {
                alert('Please select a JPG or PNG image file.');
                return;
            }

            // Validate file size (max 5MB)
            if (file.size > 5 * 1024 * 1024) {
                alert('File size must be less than 5MB.');
                return;
            }

            // Show preview
            const reader = new FileReader();
            reader.onload = function(e) {
                previewImage.src = e.target.result;
                uploadPlaceholder.classList.add('d-none');
                imagePreview.classList.remove('d-none');
            };
            reader.readAsDataURL(file);
        }

        function replaceImage() {
            imageInput.click();
        }

        function removeImage() {
            imageInput.value = '';
            uploadPlaceholder.classList.remove('d-none');
            imagePreview.classList.add('d-none');
            previewImage.src = '';
        }

        // Click to browse functionality
        imageUploadArea.addEventListener('click', function(e) {
            if (e.target === imageUploadArea || e.target.closest('#uploadPlaceholder')) {
                imageInput.click();
            }
        });
    </script>
}