@page "/Error"
@model WebApplication1.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="min-h-screen d-flex align-items-center" style="background: linear-gradient(135deg, #faf7f2 0%, #f5e6d3 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow border-0 rounded-4 text-center">
                    <div class="card-body p-5">
                        <div class="rounded-3 bg-danger bg-opacity-10 p-3 d-inline-flex align-items-center justify-content-center mb-4">
                            <i class="bi bi-exclamation-triangle text-danger" style="font-size: 3rem;"></i>
                        </div>
                        
                        <h1 class="h2 fw-bold text-dark mb-3">Oops! Something went wrong</h1>
                        <p class="text-muted mb-4">We're sorry, but an error occurred while processing your request.</p>
                        
                        @if (Model.ShowRequestId)
                        {
                            <p class="small text-muted mb-4">
                                <strong>Request ID:</strong> <code>@Model.RequestId</code>
                            </p>
                        }
                        
                        <a href="/" class="btn btn-warning btn-lg px-4">
                            <i class="bi bi-house"></i> Back to Menu
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>